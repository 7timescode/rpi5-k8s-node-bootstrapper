{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "schedule": [
    "every weekend"
  ],
  "packageRules": [
    {
      "matchCategories": [
        "python"
      ],
      "enabled": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": false
    },
    {
      "matchManagers": [
        "poetry"
      ],
      "groupName": "python dependencies"
    }
  ],
  "poetry": {
    "enabled": true
  },
  "prConcurrentLimit": 5,
  "timezone": "UTC"
}
